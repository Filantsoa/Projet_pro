{% extends 'base.html.twig' %}

{% block title %}Classe | {{ classe.nomClasse|capitalize }}{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1><u>Classe {{ classe.nomClasse|capitalize }}</u></h1>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Classe</th>
                                    <td><a href="">{{ classe.nomClasse|capitalize }}</a></td>
                                </tr>
                                <tr>
                                    <th>Prof Titulaire</th>
                                    <td><a href="{{ path('app_prof_titulaire_show', {'id': classe.profTitulaire.id}) }}">{{ classe.profTitulaire.nom|upper }} {{ classe.profTitulaire.prenom|title }}</a></td>
                                </tr>
                                <tr>
                                    <th>Nombre des eleves</th>
                                    <td>{{ classe.eleves|length }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <a class="btn btn-primary" href="{{ path('app_classe_index') }}"> << back to list</a>
                <a class="btn btn-warning" href="{{ path('app_classe_edit', {'id': classe.id}) }}"><i class="fa fa-edit"></i></a>
                {#{ include('classe/_delete_form.html.twig') }#}
            </div>
            
        </div>
    </div>
    

    

    

    

    
{% endblock %}
