{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1><u>Classe</u></h1>
            </div>
            <div class="container">
                <div class="row">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('suppr') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Nom Classe</th>
                                <th>Prof Titulaire</th>
                                <th>Nombre de(s) Eleve(s)</th>
                                <th id="actionClasse">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for classe in classes %}
                            <tr>
                                <td>{{ classe.nomClasse|capitalize }} {{ classe.indice|upper }}</td>
                                <td><a href="{{ path('app_prof_titulaire_show', {'id': classe.profTitulaire.id}) }}">{{ classe.profTitulaire.nom|upper }} {{ classe.profTitulaire.prenom|title }}</a></td>
                                <td>
                                    {% if classe.eleves|length == 0 %}
                                        <font color="red">Aucun eleve ajoute</font>
                                    {% else %}
                                        {{ classe.eleves|length }}
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('app_classe_show', {'id': classe.id}) }}"><i class="fa fa-list"></i></a>
                                    <a class="btn btn-warning" href="{{ path('app_classe_edit', {'id': classe.id}) }}"><i class="fa fa-edit"></i></a>
                                    {{ include('classe/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {{ knp_pagination_render(classes, 'base/pagination.html.twig') }}
                    <a class="btn btn-primary" href="{{ path('app_classe_new') }}">Nouvelle classe</a>
                </div>
            </div>
            
            
        </div>
    </div>
    

    
    
{% endblock %}
