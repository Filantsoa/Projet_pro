{% extends 'base.html.twig' %}

{% block title %}New Eleves{% endblock %}


    
{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1>Nouvelle Eleve</h1>
            </div>

            {% for message in app.flashes('success') %}
                <div class="text-center alert alert-success" id="message">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="contanaire">
                <div class="row">
                    {{ include('eleves/_form.html.twig') }}

                    <!-- <a class="btn btn-primary" href="{{ path('app_eleves_index') }}"> << back to list</a> -->
                </div>
            </div>
            
            <div class="container">
                <div class="row">
                    <div class="titre">
                        <h2>Liste des eleves</h2>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <th>Matricule</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Classe</th>
                            <th>Adresse</th>
                            <th>Telephone</th>
                            <th>Sexe</th>
                            <th>Actions</th>
                        </thead>
                        <tbody>
                            {% for elefe in eleves %}
                                <tr>
                                    <td>{{ elefe.matricule }}</td>
                                    <td>{{ elefe.nom|upper }}</td>
                                    <td>{{ elefe.prenom|title }}</td>
                                    <td><a href="">{{ elefe.classe|capitalize }}</a></td>
                                    <td>{{ elefe.adresse|title }}</td>
                                    <td>+261{{ elefe.telephone }}</td>
                                    <td>{{ elefe.sexe|capitalize }}</td>
                                    <td>
                                        {{ include('eleves/_delete_form.html.twig') }}
                                        <a class="btn btn-info" href="{{ path('app_eleves_show', {'id': elefe.id}) }}"><i class="fa fa-list"></i></a>
                                        <a class="btn btn-warning" href="{{ path('app_eleves_edit', {'id': elefe.id}) }}"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="13">Aucun enregistrement trouv√©</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ knp_pagination_render(eleves, 'base/pagination.html.twig') }}
                </div>
            </div>
        </div>
    </div> 


    <script>
        // alert("iiv");
        $( document ).ready(function() {
            console.log( "ready!" );
            setTimeout(function(){
                $('#message').css('display', 'none');
            }, 5000);
        });
        // $(window).load(function(){
            
        //     });
    </script>

    
{% endblock %}


        