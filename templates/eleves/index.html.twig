{% extends 'base.html.twig' %}

{% block title %}Eleves{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1><u>Liste des eleves</u></h1>
            </div>
            <div class="container">
                <div class="row">
                    {% for message in app.flashes('successPdf') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Matricule</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Classe</th>
                                <th>Adresse</th>
                                <th>Telephone</th>
                                <th>Sexe</th>
                                <th id="actionEleve">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for elefe in eleves %}
                            <tr>
                                {% if elefe.matricule|length <= 3 %}
                                    <td>0{{ elefe.matricule }}</td>
                                {% else %}
                                    <td>{{ elefe.matricule }}</td>
                                {% endif %}
                                <td>{{ elefe.nom|upper }}</td>
                                <td>{{ elefe.prenom|title }}</td>
                                <td><a href="">{{ elefe.classe.nomClasse|capitalize }} {{ elefe.classe.indice|upper }}</a></td>
                                <td>{{ elefe.adresse|title }}</td>
                                <td>+261{{ elefe.telephone }}</td>
                                <td>{{ elefe.sexe|capitalize }}</td>
                                <td>
                                    {{ include('eleves/_delete_form.html.twig') }}
                                    <a class="btn btn-info" href="{{ path('app_eleves_show', {'id': elefe.id}) }}" title="Informarion"><i class="fa fa-list"></i></a>
                                    <a class="btn btn-warning" href="{{ path('app_eleves_edit', {'id': elefe.id}) }}" title="Modification"><i class="fa fa-edit"></i></a>
                                    <!-- <a href="{#{ path('') }#}" class="btn btn-secondary"><i class="fa fa-minus-circle" title="Displine"></i></a>
                                    <a href="{#{ path('') }#}" class="btn btn-success"><i class="fa fa-usd" title="Ecolage"></i></a> -->
                                    <a class="btn btn-info" href="{{ path('app_eleves_pdf', {'id': elefe.id}) }}" title="PDF"><i class="fa fa-file-text"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">Aucun enregistrement trouv√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ knp_pagination_render(eleves, 'base/pagination.html.twig') }}
                    <a class="btn btn-primary" href="{{ path('app_eleves_new') }}">Nouvelle Eleve</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
