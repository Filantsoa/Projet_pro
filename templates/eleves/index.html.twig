{% extends 'base.html.twig' %}

{% block title %}Eleves{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1>Liste des eleves</h1>
            </div>
            <div class="container">
                <div class="row">
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Matricule</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Adresse</th>
                                <th>Telephone</th>
                                <th>Sexe</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for elefe in eleves %}
                            <tr>
                                <td>{{ elefe.matricule }}</td>
                                <td>{{ elefe.nom|upper }}</td>
                                <td>{{ elefe.prenom|title }}</td>
                                <td>{{ elefe.adresse|title }}</td>
                                <td>+261{{ elefe.telephone }}</td>
                                <td>{{ elefe.sexe|capitalize }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('app_eleves_show', {'id': elefe.id}) }}"><i class="fa fa-list"></i></a>
                                    <a class="btn btn-warning" href="{{ path('app_eleves_edit', {'id': elefe.id}) }}"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">Aucun enregistrement trouv√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="{{ path('app_eleves_new') }}">Nouvelle Eleve</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
