{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section">
            <div class="titre">
                <h1>RECHERCHE</h1>
            </div>
            <div class="container">
                <div class="row">
                    {{form(form)}}
                </div>

                {% if eleves|length == 0 %}
                    <h1>Aucun result</h1>
                {% else %}
                {% for eleve in eleves %}
                    {{ eleve.matricule }}
                    {{ eleve.nom }}
               
                {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
